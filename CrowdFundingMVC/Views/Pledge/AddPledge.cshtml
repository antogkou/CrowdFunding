@model CrowdFundingMVC.ViewModels.AddPledgeVM

@{
    ViewData["Title"] = "AddPledge";
}



<div class="text-center" id="">
    <h1>Add Pledges to your project</h1>
</div>

<div class="row">
    <div class="col col-md-2"></div>
    <div class="tab col-md-8">
        <form data-form="0" class="js-pledge-add-form">
            <div class="form-group">
                <label asp-for="@Model.Pledge.PledgeDescription" class="control-label">Pledge Description</label>
                <input asp-for="@Model.Pledge.PledgeDescription" class="form-control" type="text" required id="PledgeDescription"
                       data-val="true" data-val-required="Pledge Description is required" />
                @Html.ValidationMessageFor(m => m.Pledge.PledgeDescription)
                <div class="invalid-feedback">
                    Please provide a NeededAmount.
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Pledge.PledgePrice" class="control-label">Pledge Price</label>
                <input asp-for="@Model.Pledge.PledgePrice" class="form-control" type="number" required id="PledgePrice"
                       data-val="true" data-val-required="Pledge Price is required" />
                @Html.ValidationMessageFor(m => m.Pledge.PledgePrice)
                <div class="invalid-feedback">
                    Please provide a NeededAmount.
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Pledge.PledgeReward" class="control-label">Pledge Reward</label>
                <input asp-for="@Model.Pledge.PledgeReward" class="form-control" type="text" required id="PledgeReward"
                       data-val="true" data-val-required="Pledge Reward is required" />
                @Html.ValidationMessageFor(m => m.Pledge.PledgeReward)
                <div class="invalid-feedback">
                    Please provide a NeededAmount.
                </div>
            </div>
            <div class="form-group">
                <a asp-action="SingleProject" asp-route-id="@Model.Project.ProjectId" asp-controller="Project" class="btn btn-danger float-left">Cancel</a>
                <input type="button" class="btn btn-success float-right" value="Submit" onclick="submitPledgeToServer(@Model.Project.ProjectId)">

            </div>
        </form>
    </div>
</div>
