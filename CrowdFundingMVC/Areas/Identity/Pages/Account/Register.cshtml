@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.user_FirstName"></label>
                <input asp-for="Input.user_FirstName" class="form-control" />
                <span asp-validation-for="Input.user_FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.user_LastName"></label>
                <input asp-for="Input.user_LastName" class="form-control" />
                <span asp-validation-for="Input.user_LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.user_VAT"></label>
                <input type="text"  pattern="/^-?\d+\.?\d*$/" minlength="9" onKeyPress="if(this.value.length==9) return false;" asp-for="Input.user_VAT" class="form-control" />
                <span asp-validation-for="Input.user_VAT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input type="password" asp-for="Input.Password" class="form-control" id="myPass" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input type="password" asp-for="Input.ConfirmPassword" class="form-control" id="myPass2" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <input type="checkbox" onclick="passFunction()"> Show Password
            <p></p>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>This is our register page. We will need some info about you to help you navigate our site!</h4>
            <hr />
            
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
