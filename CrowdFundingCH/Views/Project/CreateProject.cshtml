@model Project
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Project Create Page</h1>
<h1 align="center"> Εισαγωγή Project</h1>

<div class="row">
    <div class="col col-md-2"></div>
    <div class="tab col-md-8">
        <form data-form="0">

            <div class="form-group">
                @Html.TextBoxFor(c => c.Name,
                new { @class = "form-control js-Name", placeholder = "Project name" })
            </div>

            <div class="form-group">
                @Html.TextAreaFor(c => c.Description,
                new { @class = "form-control js-Description", placeholder = "Project description" })
            </div>

            <div class="form-group">
                <div class="input-group-prepend">
                    @Html.TextBoxFor(c => c.NeededAmount,
                    new { @class = "form-control js-projectgoal", placeholder = "NeededAmount: " })
                    <span class="input-group-text">€</span>
                </div>
            </div>

            <div class="form-group">
                <select name="ProjectCategory" class="form-control">
                    @{ var categories = Enum.GetValues(
                               typeof(CrowdFundingCH.Models.ProjectCategory))
                               .Cast<CrowdFundingCH.Models.ProjectCategory>();
                        foreach (var category in categories)
                        {
                            <option value="@category">@category</option>
                        }
                    }
                </select>
            </div>

            <div class="col col-md-12 d-flex justify-content-end pr-0">
                <input type="button" onclick="submitProjectToServer()" value="Submit">
            </div>

        </form>
    </div>
</div>